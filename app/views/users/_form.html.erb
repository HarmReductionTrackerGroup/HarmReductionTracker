<%= form_with model: @user, local: true do |f| %>  
  <div class="form-field-box">
    <div class="field">
      <%= f.label t(:deactivated?) %><br />
      <%= f.check_box :deactivated %>
    </div>
    <div class="field">
      <%= f.label t(:admin?) %><br />
      <%= f.check_box :admin %>
  </div>
  </div>
  <div class="form-field-box ffb-col">
    <div class="field">
      <%= f.label t(:first_name) %><br />
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label t(:last_name) %><br />
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="form-field-box ffb-col">
    <div class="field">
      <%= f.label t(:phone) %><br />
      <%= f.phone_field :phone %>
    </div>
    <div class="field">
      <%= f.label t(:email) %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>
      <div class="field">
      <%= f.label t(:contact_type) %><br />
      <%= f.select(:contact_type, ['Text',
          'Phone',
          'Email'], :include_blank => "#{t(:choose_contact)}") %>
    </div>
  </div>
  <div class="form-field-box ffb-col">
